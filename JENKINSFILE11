// Flow control statement
pipeline {
	agent any
	environment{
		fname = "KAMAL"
		}
	stages {
		stage ('if else') {
			steps {
				echo "${fname}"
				script {
					echo "$env.fname"
					if(env.fname == 'KAMAL') {
						echo 'I am here.'
					}
					else{
						echo 'I am inside the else block. '
					}
				}
			}
		}
		stage ('try catch') {
				script {
					echo 'try and catch'
					try{
						sh 'I am here.'
					}
					catch(e){
						echo 'Error has occured'
					}
				}		
		}	
	}
}
